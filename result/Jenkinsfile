pipeline {

   agent none

   stages {
      stage('build') {
         agent {
          docker{
                 image 'node:8.9-alpine'                 
               }
         }
         when {
            changeset "result/**"
         }
         steps {
            echo 'compiling users service'
            dir('result') {
              sh 'npm install'
            }
         }
      }
      stage('test') {
         agent {
          docker{
                 image 'node:8.9-alpine'
               }
         }
         when {
            changeset "result/**"
         }
         steps {
            echo 'running unit tests on users service'
            dir('result') {
              sh 'npm install'
			  sh 'npm test'
            }
         }
      }
 

      stage('docker-package'){
         agent any
         steps{
           echo 'Packaging users app with docker'
           script{
             docker.withRegistry('https://index.docker.io/v1/', 'dockerlogin') {
                 def usersImage = docker.build("sawroy/users:v${env.BUILD_ID}", "result/")
                 usersImage.push()
                 usersImage.push("latest")

             }
            }
         }
      }
   }

   post{
         always{
             echo 'the job is complete'
         }
   }
}

